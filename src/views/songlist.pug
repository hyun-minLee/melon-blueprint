  body
    h1
      div(style='display: flex; align-items: center;')
        img(src=`/static/images/Melon로고.jpg` style='max-width: 70%' , alt='이미지 없음')
        input(type="form" name="favorite" style='max-width: 70%; position: relative; left: 6px; top:8px'  placeholder="노래 검색")
    // 게시글 목록 표시 부분
    div.container
      div.item1
        span.item1-1
          input(type="checkbox" name="favorite" value="true")
        span.item1-2 순위
        span.item1-3 -
        span.item1-4
        span.item1-5 곡정보
        span.item1-6 앨범
        span.item1-7 좋아요
        span.item1-8 듣기
        span.item1-9 담기
        span.item1-10 다운
        span.item1-11 뮤비 
      each post in posts
        div.item2
          span.item2-1 
            input(type="checkbox" name="favorite" value="true")
          span.item2-2 #{number}
          - number++;
          span.item2-3 -
          span.item2-4
            img(src=`/static/images/${post.image}` style='max-width: 100%' , alt='이미지 없음')
          span.item2-5
            div #{post.title}
            div #{post.singer_name}  
          span.item2-6 앨범
          span.item2-7
            img(src='/static/images/하트.jpg' style='max-width: 20%' , alt='이미지 없음')
            span #{post.playcount}
          span.item2-8
            //- a(href=`${post.url}`, target='_blank')
